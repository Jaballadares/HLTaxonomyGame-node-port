<div ng-controller="EnterPlayerCtrl">
    <div class="transparent-logo"></div>
    <div class="top-options">
        <a href="/home" class="pull-left"><i class="icon-left-arrow"></i> Back</a>
        <a href="/game_setting" class="pull-right"><i class="icon-cog"></i></a>
    </div>
    <div class="head">
        <p class="player-name">Player Name</p>
    </div>
    <div class="settings-buttons col-sm-12 text-center no-padding-left">
        <form name="enterPlayerForm" class="form-inline player-input" ng-submit="save()">
            <div class="form-group">
                <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name" required ng-model="player.firstName">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name" required ng-model="player.lastName">
            </div><br />
            <div class="form-group">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required ng-model="player.email">
            </div><br />
            <button type="submit" class="btn default-btn" ng-disabled="enterPlayerForm.$invalid">Next</button>
        </form>
    </div>
</div>
