<div ng-controller="GameSettingCtrl" ng-init="init()">
    <div class="settings-box">
        <h2><i class="icon-cog"></i> Game Setting</h2>
        <form name="gameSettingForm" class="form-horizontal" ng-submit="save()">
            <div class="form-group form-settings" ng-class="{'has-error': gameSettingForm.name.$dirty && gameSettingForm.name.$invalid}">
                <label for="name" class="col-sm-4 control-label">Event Name</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control even-input" id="name" name="name" placeholder="Place event name" required ng-model="event.name">
                </div>
            </div>
            <div class="form-group form-settings" ng-class="{'has-error': gameSettingForm.event_date.$dirty && gameSettingForm.event_date.$invalid}">
                <label for="event_date" class="col-sm-4 control-label">Date</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control even-input" id="event_date" name="event_date" placeholder="MM/DD/YYYY" required ng-pattern="/^\d{2}/\d{2}/\d{4}$/" ng-model="event.event_date">
                </div>
            </div>
            <div class="form-group form-settings" ng-class="{'has-error': gameSettingForm.preview_countdown.$dirty && gameSettingForm.preview_countdown.$invalid}">
                <label for="preview_countdown" class="col-sm-6 control-label">Preview Countdown</label>
                <div class="col-sm-6">
                    <select class="form-control date-event" id="preview_countdown" name="preview_countdown" required ng-model="event.preview_countdown" ng-options="label for label in previewCountdownOptions">
                        <option value=""></option>
                    </select>
                    <label for="" class="control-label seconds">Seconds</label>
                </div>
            </div>
            <div class="form-group form-settings" ng-class="{'has-error': gameSettingForm.game_time_limit.$dirty && gameSettingForm.game_time_limit.$invalid}">
                <label for="game_time_limit" class="col-sm-6 control-label">Game Time Limit</label>
                <div class="col-sm-6">
                    <select class="form-control date-event" id="game_time_limit" name="game_time_limit" required ng-model="event.game_time_limit" ng-options="label for label in gameTimeLimitOptions">
                        <option value=""></option>
                    </select>
                    <label for="" class="control-label minutes">Minutes</label>
                </div>
            </div>
            <div class="settings-buttons col-sm-12">
                <button type="submit" class="btn default-btn" ng-disabled="gameSettingForm.$invalid">Next</button>
                <a href="/home" class="btn default-btn">Cancel</a>
            </div>
        </form>
    </div>
</div>
